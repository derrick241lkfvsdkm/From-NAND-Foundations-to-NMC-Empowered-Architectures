/**
 * Or gate:
 * if (a or b) out = 1, else out = 0 
 */
CHIP Or {
    IN a, b;
    OUT out;

    PARTS:
    // First, implement the NOT gate for both inputs
    Not(in=a, out=nota);
    Not(in=b, out=notb);
    
    // Then, apply NAND to the negated inputs to get the OR result
    Nand(a=nota, b=notb, out=out);
}